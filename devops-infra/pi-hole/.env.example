# Pi-hole Configuration Example

# Service name and container configuration
SERVICE_NAME=pihole
CONTAINER_NAME=pihole

# Timezone
TZ=Africa/Johannesburg

# Web UI password - CHANGE THIS!
FTLCONF_webserver_api_password=correct horse battery staple

# DNS configuration
FTLCONF_dns_listeningMode=ALL
DNSMASQ_LISTENING=all

# DNS upstream servers
PIHOLE_DNS_1=unbound#53
PIHOLE_DNS_2=unbound#53

# DHCP Configuration (optional)
# FTLCONF_dhcp_active=true
# FTLCONF_dhcp_start=192.168.1.100
# FTLCONF_dhcp_end=192.168.1.200
# FTLCONF_dhcp_router=192.168.1.1
# FTLCONF_dhcp_domain_name=example.local

# NTP Server (optional)
# FTLCONF_ntp_active=false
# FTLCONF_ntp_timezone=UTC

# Logging
FTLCONF_misc_fqdn_max_lines=1000

# Interface listening
FTLCONF_dns_listenLocal=true

# Cache configuration (optional)
# FTLCONF_misc_cache_size=10000

# Privacy settings
# FTLCONF_misc_query_display=browserify
# FTLCONF_misc_cname_deep_inspect=true

# Advanced: dnsmasq options
# DNSMASQ_MAX_LOGS=1000

# API settings (optional)
# FTLCONF_webserver_api_enable=true
# FTLCONF_webserver_api_cors=true

# Optional: Email notifications
# FTLCONF_email_enabled=false
# FTLCONF_email_smtp_host=smtp.example.com
# FTLCONF_email_smtp_port=587
# FTLCONF_email_smtp_username=user@example.com
# FTLCONF_email_smtp_password=password
