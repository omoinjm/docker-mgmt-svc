# Grafana Configuration Example

# Service name and container configuration
SERVICE_NAME=grafana
CONTAINER_NAME=grafana

# Server configuration
GF_SERVER_ROOT_URL=http://localhost:3000
GF_SERVER_DOMAIN=localhost
GF_SERVER_PROTOCOL=http
GF_SERVER_ENFORCE_DOMAIN=false

# Security configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin
GF_SECURITY_ADMIN_PASSWORD_RESET_LINK_EXPIRES_IN_SECONDS=86400
GF_SECURITY_DISABLE_GRAVATAR=false

# User settings
GF_USERS_ALLOW_SIGN_UP=false
GF_USERS_ALLOW_ORG_CREATE=false

# Authentication
GF_AUTH_ANONYMOUS_ENABLED=false
GF_AUTH_DISABLE_LOGIN_FORM=false

# Email/SMTP configuration (optional)
# GF_SMTP_ENABLED=false
# GF_SMTP_HOST=smtp.example.com:587
# GF_SMTP_USER=your_email@example.com
# GF_SMTP_PASSWORD=your_password
# GF_SMTP_FROM_ADDRESS=grafana@example.com

# Plugins to auto-install (optional)
# GF_INSTALL_PLUGINS=grafana-clock-panel,grafana-piechart-panel,redis-datasource

# Database configuration (optional - default uses sqlite)
# GF_DATABASE_TYPE=mysql
# GF_DATABASE_HOST=mysql:3306
# GF_DATABASE_NAME=grafana
# GF_DATABASE_USER=grafana
# GF_DATABASE_PASSWORD=grafana_password

# Logging
GF_LOG_LEVEL=info

# Session timeout (in hours)
GF_SESSION_LIFE_TIME=720

# Data retention
GF_METRICS_GRAPHITE_PREFIX=grafana

# Timezone
TZ=UTC
